{
  "manifest_version": 2,
  "name": "Echo prompt",
  "version": "0.2.0",
  "description": "Save and use AI prompts quickly",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "tabs",
    "https://chat.deepseek.com/*",
    "https://chat.qwen.ai/*",
    "https://gemini.google.com/*",
    "https://*.brave.com/*",
    "https://claude.ai/*",
    "https://www.perplexity.ai/*",
    "https://www.kimi.com/*",
    "https://t3.chat/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://chat.qwen.ai/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://www.kimi.com/*",
        "https://t3.chat/*"
      ],
      "js": ["content.js", "darkmode.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["popup.css"]
}
